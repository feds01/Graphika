{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-var": "error",
    "no-const-assign": "error",
    "no-unreachable": "error",
    "no-invalid-regexp": "error",
    "no-console": "off",
    "no-unused-vars": "off",
    "no-trailing-spaces": "off",
    "spaced-comment": "warn",
    "use-isnan": "error",
    "eqeqeq": "error",
    "radix": "warn",
    "quotes": [
      "error",
      "double"
    ],
    "semi": 2
  },
  "env": {
    "browser": true,
    "node": true
  },
  "root": true
}